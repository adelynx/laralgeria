migrate() {
    echo "ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹"
      echo -e "âŒ›  \033[34mDevelopment environment: \033[0m\033[93m \033[93mStart migrating all migrations...\033[0m"
      echo "ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹ğŸ¹"

      docker exec -it laralgeria_web_v1 php artisan migrate
